def SetRevDate(x):
    rev_date = x.date.split('on')[-1].strip()
    if rev_date =='':
        return None
    else:
        return pd.to_datetime(rev_date ,format='%B %d, %Y').date()
    
rev_data['review_date'] = rev_data.apply(lambda x: SetRevDate(x) ,axis=1)
